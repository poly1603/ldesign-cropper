{
  "name": "@ldesign/cropper-core",
  "version": "2.0.0",
  "description": "Core functionality for @ldesign/cropper - A powerful image cropper library",
  "type": "module",
  "sideEffects": [
    "**/*.css",
    "**/*.scss",
    "**/*.less"
  ],
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    },
    "./filters": {
      "types": "./es/filters/index.d.ts",
      "import": "./es/filters/index.js",
      "require": "./lib/filters/index.cjs"
    },
    "./drawing": {
      "types": "./es/drawing/index.d.ts",
      "import": "./es/drawing/index.js",
      "require": "./lib/drawing/index.cjs"
    },
    "./workers": {
      "types": "./es/workers/index.d.ts",
      "import": "./es/workers/index.js",
      "require": "./lib/workers/index.cjs"
    },
    "./constants": {
      "types": "./es/config/constants.d.ts",
      "import": "./es/config/constants.js",
      "require": "./lib/config/constants.cjs"
    },
    "./es/*": "./es/*",
    "./lib/*": "./lib/*",
    "./dist/*": "./dist/*"
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "files": [
    "es",
    "lib",
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "ldesign-builder --watch",
    "build": "ldesign-builder build",
    "clean": "rimraf es lib dist",
    "lint": "tsc --noEmit",
    "test": "vitest"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "rimraf": "^5.0.0"
  },
  "keywords": [
    "cropper",
    "image-cropper",
    "image-editor",
    "core",
    "typescript"
  ],
  "author": "ldesign",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
