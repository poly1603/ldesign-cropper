{
  "name": "@ldesign/cropper-core",
  "version": "2.0.0",
  "description": "High-performance image cropper core library - Framework agnostic",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./filters": {
      "types": "./dist/filters/index.d.ts",
      "import": "./dist/filters/index.js",
      "require": "./dist/filters/index.cjs"
    },
    "./drawing": {
      "types": "./dist/drawing/index.d.ts",
      "import": "./dist/drawing/index.js",
      "require": "./dist/drawing/index.cjs"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && tsc --emitDeclarationOnly --outDir dist",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "cropper",
    "image-cropper",
    "image-editor",
    "crop",
    "image",
    "canvas",
    "filters",
    "performance",
    "typescript"
  ],
  "author": "ldesign",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^1.0.0"
  }
}

